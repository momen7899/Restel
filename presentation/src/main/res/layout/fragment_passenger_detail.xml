<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidStart"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/dana_bold"
        android:text="@string/newReserve"
        android:textColor="@color/whiteTextColor"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/guidTop"
        app:layout_constraintStart_toStartOf="@id/guidStart" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_login_constraint"
        app:layout_constraintBottom_toBottomOf="@id/guidBottom"
        app:layout_constraintTop_toBottomOf="@id/guidTop">


        <LinearLayout
            android:id="@+id/reserveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roomHint"
                style="@style/EditTextHint"
                android:text="@string/roomHint" />

            <EditText
                android:id="@+id/reserveRoom"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/customerHint"
                style="@style/EditTextHint"
                android:layout_marginTop="16dp"
                android:text="@string/clientHint" />

            <EditText
                android:id="@+id/reserveCustomer"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/firstDateHint"
                style="@style/EditTextHint"
                android:layout_marginTop="16dp"
                android:text="@string/firstDateHint" />

            <EditText
                android:id="@+id/reserveFirstDate"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="LabelFor,TextFields" />

            <TextView
                android:id="@+id/lastDateHint"
                style="@style/EditTextHint"
                android:layout_marginTop="16dp"
                android:text="@string/lastDateHint" />

            <EditText
                android:id="@+id/reserveLastDate"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="LabelFor,TextFields" />

            <TextView
                android:id="@+id/priceHint"
                style="@style/EditTextHint"
                android:layout_marginTop="16dp"
                android:text="@string/priceHint" />

            <EditText
                android:id="@+id/reservePrice"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                tools:ignore="LabelFor,TextFields" />

            <Button
                android:id="@+id/submitBtn"
                style="@style/CustomButton"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:text="@string/submit" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>