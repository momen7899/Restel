<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restel" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryStatusColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="hintEnabled">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="fontFamily">@font/dana_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginEditText" parent="CustomEditText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="CustomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_submit</item>
        <item name="android:fontFamily">@font/dana_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CustomTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/dana_medium</item>
    </style>

    <style name="ToolbarTitleTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dana_medium</item>
    </style>
</resources>